<header class="bg-white shadow-md fixed top-0 left-0 w-full z-50">
    <div class="container mx-auto px-6 md:px-24 py-3 flex justify-between items-center">
        <!-- Logo -->
        <div class="flex items-center space-x-3">
            <img src="/image/Untitled-1 - Copy copy.png" alt="Logo" class="h-10 w-auto">
        </div>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex space-x-6">
            <a href="#" class="nav-link text-gray-600 hover:text-blue-600 hover:border-b-2 hover:border-blue-600 pb-1 transition">Home</a>
            <a href="#about" class="nav-link text-gray-600 hover:text-blue-600 hover:border-b-2 hover:border-blue-600 pb-1 transition">About</a>
            <a href="#skill" class="nav-link text-gray-600 hover:text-blue-600 hover:border-b-2 hover:border-blue-600 pb-1 transition">Skills</a>
            <a href="#resume" class="nav-link text-gray-600 hover:text-blue-600 hover:border-b-2 hover:border-blue-600 pb-1 transition">Resume</a>
            <a href="#contact" class="nav-link text-gray-600 hover:text-blue-600 hover:border-b-2 hover:border-blue-600 pb-1 transition">Contact</a>
        </nav>

        <!-- Mobile Hamburger -->
        <div class="md:hidden">
            <button id="menu-btn" class="text-gray-700 focus:outline-none text-2xl">
                â˜°
            </button>
        </div>
    </div>

    <!-- Mobile Nav -->
    <nav id="mobile-menu"
         class="hidden absolute top-full left-0 w-full bg-white shadow-md flex flex-col transition-all duration-300 ease-in-out">
        <a href="#" class="mobile-link px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Home</a>
        <a href="#about" class="mobile-link px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">About</a>
        <a href="#skill" class="mobile-link px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Skills</a>
        <a href="#resume" class="mobile-link px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Resume</a>
        <a href="#contact" class="mobile-link px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Contact</a>
    </nav>
</header>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("mobile-menu");
    const desktopLinks = document.querySelectorAll(".nav-link");
    const mobileLinks = document.querySelectorAll(".mobile-link");

    // Toggle mobile menu
    btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
    });

    // Close menu when a mobile link is clicked
    mobileLinks.forEach(link => {
        link.addEventListener("click", () => {
            menu.classList.add("hidden");
        });
    });

    // Auto close menu on scroll
    window.addEventListener("scroll", () => {
        if (!menu.classList.contains("hidden")) {
            menu.classList.add("hidden");
        }
    });

    // Highlight active link on scroll
    const sections = document.querySelectorAll("section, #"); // Replace '#' with your section selectors if needed

    function setActiveLink() {
        let scrollPos = window.scrollY + 100; // Adjust offset if needed
        sections.forEach(section => {
            const id = section.getAttribute("id");
            if (section.offsetTop <= scrollPos && (section.offsetTop + section.offsetHeight) > scrollPos) {
                desktopLinks.forEach(link => {
                    link.classList.remove("text-blue-600", "border-b-2", "border-blue-600");
                    if (link.getAttribute("href") === `#${id}`) {
                        link.classList.add("text-blue-600", "border-b-2", "border-blue-600");
                    }
                });
            }
        });
    }

    window.addEventListener("scroll", setActiveLink);
});
</script>
