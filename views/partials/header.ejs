<header class="bg-white shadow-md fixed top-0 left-0 w-full z-50">
    <div class="container mx-auto px-6 md:px-24 py-3 flex justify-between items-center">
        <!-- Logo -->
        <div class="flex items-center space-x-3">
            <img src="/image/Untitled-1 - Copy copy.png" alt="Logo" class="h-10 w-auto">
        </div>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex space-x-6">
            <a href="#" class="text-gray-600 hover:text-blue-600 focus:text-blue-600 transition">Home</a>
            <a href="#about" class="text-gray-600 hover:text-blue-600 focus:text-blue-600 transition">About</a>
            <a href="#skill" class="text-gray-600 hover:text-blue-600 focus:text-blue-600 transition">Skills</a>
            <a href="#resume" class="text-gray-600 hover:text-blue-600 focus:text-blue-600 transition">Resume</a>
            <a href="#contact" class="text-gray-600 hover:text-blue-600 focus:text-blue-600 transition">Contact</a>
        </nav>

        <!-- Mobile Hamburger -->
        <div class="md:hidden">
            <button id="menu-btn" class="text-gray-700 focus:outline-none text-2xl">
                â˜°
            </button>
        </div>
    </div>

    <!-- Mobile Nav -->
    <nav id="mobile-menu"
        class="hidden absolute top-full left-0 w-full bg-white shadow-md flex flex-col transition-all duration-300 ease-in-out">
        <a href="#" class="px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Home</a>
        <a href="#about"
            class="px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">About</a>
        <a href="#skill"
            class="px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Skills</a>
        <a href="#resume"
            class="px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Resume</a>
        <a href="#contact"
            class="px-4 py-3 text-gray-700 hover:bg-gray-200 focus:bg-blue-100 focus:text-blue-600">Contact</a>
    </nav>
</header>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("menu-btn");
        const menu = document.getElementById("mobile-menu");
        const links = menu.querySelectorAll("a");

        // toggle menu
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });

        // close menu when link is clicked
        links.forEach(link => {
            link.addEventListener("click", () => {
                menu.classList.add("hidden");
            });
        });

        // auto close menu when scroll
        window.addEventListener("scroll", () => {
            if (!menu.classList.contains("hidden")) {
                menu.classList.add("hidden");
            }
        });
    });
</script>