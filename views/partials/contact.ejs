<section id="contact" class="py-16 bg-gray-50 px-4 md:px-24">
  <div class="container mx-auto">
    <!-- Section Title -->
    <div class="mb-12 text-left">
      <h1 class="text-4xl font-bold text-gray-800 mb-2">Contact Me</h1>
      <span class="block w-20 h-1 bg-teal-500 mb-4 rounded"></span>
    </div>

    <!-- Contact Form & Map -->
    <div class="flex flex-col lg:flex-row gap-12">
      
      <!-- Form -->
      <div class="flex-1 bg-white rounded-xl shadow-lg p-6">
        <form action="" method="POST" class="space-y-4">
          <input type="text" name="name" placeholder="Name..." class="w-full border border-gray-300 rounded px-4 py-2 focus:ring-2 focus:ring-teal-500 outline-none" />
          <input type="number" name="phone" placeholder="Phone..." class="w-full border border-gray-300 rounded px-4 py-2 focus:ring-2 focus:ring-teal-500 outline-none" />
          <input type="email" name="email" placeholder="E-mail..." class="w-full border border-gray-300 rounded px-4 py-2 focus:ring-2 focus:ring-teal-500 outline-none" />
          <textarea name="text" placeholder="How can we help you?" class="w-full border border-gray-300 rounded px-4 py-2 focus:ring-2 focus:ring-teal-500 outline-none" rows="6"></textarea>
          <button type="submit" class="bg-teal-500 text-white px-6 py-2 rounded font-semibold hover:bg-teal-600 transition">Send</button>
        </form>
      </div>

      <!-- Map -->
      <div class="flex-1 rounded-xl overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3141.249217055303!2d85.31936821039699!3d27.711707425200935!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39eb1905d0b50847%3A0x9e277560a5a516b!2sCotiviti%20Nepal!5e1!3m2!1sen!2snp!4v1721845391032!5m2!1sen!2snp"
          class="w-full h-96 border-0" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>

    </div>
  </div>
</section>
