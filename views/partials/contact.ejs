<section id="contact" class="py-16" style="background-color: #212529;">
  <div class="container mx-auto px-6 lg:px-12">

    <!-- Heading -->
    <div class="relative flex flex-col items-center text-center mb-12">
      <h2 class="text-6xl sm:text-7xl md:text-9xl text-gray-500 uppercase font-semibold opacity-30 w-full">
        Contact
      </h2>
      <p class="absolute top-1/2 -translate-y-1/2 text-xl sm:text-2xl md:text-3xl font-semibold text-white w-full">
        Get in Touch
        <span class="block w-16 sm:w-20 h-[3px] bg-blue-500 mx-auto mt-2"></span>
      </p>
    </div>

    <!-- Google Map -->
    <div class="mb-12">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3265.716030943521!2d85.32920062513145!3d27.702065926185615!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39eb19a1a6131fb1%3A0xf4a1a2e3422291fb!2sGhattekulo%2C%20Kathmandu%2044600!5e1!3m2!1sen!2snp!4v1759218733783!5m2!1sen!2snp" 
        width="100%" 
        height="400" 
        style="border:0; border-radius:8px;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>

    <!-- Contact Info & Form -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-10">
      <!-- Left Side -->
      <div class="md:col-span-4 xl:col-span-3 text-center md:text-left font-medium space-y-4">
        <h2 class="text-xl font-semibold text-white uppercase">Address</h2>
        <p class="text-gray-300">Kathmandu, Nepal</p>
        <p class="text-gray-300 flex items-center justify-center md:justify-start">
          <i class="fas fa-phone text-blue-500 mr-2"></i>+977 9866620189
        </p>
        <p class="text-gray-300 flex items-center justify-center md:justify-start">
          <i class="fas fa-envelope text-blue-500 mr-2"></i>nyaupane.prabin8838@gmail.com
        </p>
      </div>

      <!-- Right Side -->
      <div class="md:col-span-8 xl:col-span-8">
        <h2 class="text-xl font-semibold text-white uppercase mb-6 text-center md:text-left">
          Send us a note
        </h2>
        <form  class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <input type="text" name="name" placeholder="Name" required
              class="w-full px-4 py-3 rounded-md bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-blue-500 outline-none">
            <input type="email" name="email" placeholder="Email" required
              class="w-full px-4 py-3 rounded-md bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-blue-500 outline-none">
          </div>
          <textarea name="message" rows="5" placeholder="Tell us more about your needs..." required
            class="w-full px-4 py-3 rounded-md bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-blue-500 outline-none"></textarea>
          <div class="text-center md:text-left">
            <button type="submit"
              class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-full transition duration-300">
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>

  </div>
</section>
